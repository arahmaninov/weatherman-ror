<h2>Новая локация</h2>

<div style="margin: auto">
  <%= form_with(model: @location) do |form| %>
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>
    <div> <%= form.text_field :user_id, type: "hidden", value: current_user.id %> </div>
    <div>
      <%= form.label :temperature, style: "display: block" %>
      <%= form.text_field :description %>
    </div>

    <br>
    <div> <%= form.submit %> </div>
  <% end %>
</div>
